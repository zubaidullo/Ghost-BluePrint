{
    "name": "${environmentName}",
    "description": "Ghost",
    "version": "1.30.7",
    "author": "https://github.com/Almansherov",
    "containers": [
        {
            "hostname": "${webContainerName}",
            "template": "debian-stretch",
            "peer-criteria": "HTTP-GROUP",
            "size": "${containerSize}",
            "port-mapping": [
                {
                    "protocol": "http",
                    "domain": "${domainName}",
                    "internal-port": "80",
                    "external-port": "80"
                }
            ]
        }
    ],
    "peer-criteria": [
        {
            "name": "HTTP-GROUP",
            "max-price": "25"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/Almansherov/Ghost-BluePrint/archive/master.zip",
        "ansible-playbook": "Ghost.yml",
        "extra-vars": [
            {
                "key": "site_title",
                "value": "${siteTitle}"
            }, 
            {
                "key": "domain_name",
                "value": "${domainName}"
            }, 
            {
                "key": "admin_user",
                "value": "${adminUser}"
            }, 
            {
                "key": "admin_pwd",
                "value": "${adminPwd}"
            }
        ],
        "groups": [
            {
                "name": "Ghost",
                "hostnames": [
                    "${webContainerName}"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "Ghost",
            "validation": "[a-zA-Z0-9]+"
        },
        "domainName": {
            "description": "Enter the application domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        },
        "siteTitle": {
            "description": "Enter the site's title",
            "type": "string",
            "default": "title"
        },
        "adminUser": {
            "description": "Site administrator user",
            "type": "string",
            "default": "admin"
        },
        "adminPwd": {
            "description": "Site administrator password",
            "type": "string",
            "default": "admin"
        },
        "webContainerName": {
            "description": "Enter the container's hostname",
            "type": "string",
            "default": "Ghost",
            "validation": "[a-zA-Z0-9]+"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "TINY",
            "validation": "TINY,SMALL,MEDIUM,LARGE,HUGE"
        }
    }
}
